@using NewsSystem.Models.ViewModels

@model  IEnumerable<ArticleViewModel>

<div id="front-page-articles" class="container">

    <div class="h1 text-center">Most Popular News: </div>
    <div class="row">
        @foreach (ArticleViewModel article in Model)
        {
            <div class="col">
                <div class="card flex-md-row mb-4 shadow-sm h-md-250">
                    <div class="card-body d-flex flex-column align-items-start">
                        <strong class="d-inline-block mb-2 text-primary">@article.Category.Name</strong>
                        <h3 class="mb-0">
                            <a class="text-dark" href="/Article/Details/@article.ArticleId">@article.Title</a>
                        </h3>
                        <div class="mb-1 text-muted">@article.CreationDate</div>
                        <p class="card-text mb-auto">@article.Content</p>
                        <a href="#">Continue reading</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>