@using NewsSystem.Models.ViewModels

<div class="h1 text-center">Latest News: </div>
@foreach (CategoryViewModel category in ViewBag.Categories)
{

    <div class="card mb-4 shadow-sm">
        <div class="card-header">
            <h4 class="my-0 font-weight-normal text-center">@category.Name</h4>
        </div>
        <div class="card-body">
            <ul class="list-unstyled mt-3 mb-4">
                @for (int i = 0; i < 3; i++)
                {
                    <li class="card-title h3">
                        <a class="text-dark" href="/Article/Details/@category.Articles[i].ArticleId">
                            @category.Articles[i].Title
                        </a>
                    </li>
                    <li class="text-right h5 font-italic">- Author: @category.Articles[i].Author.UserName</li>
                }
            </ul>
            <a type="button" href="/category/all/@category.Name" class="btn btn-lg btn-block btn-outline-primary">See more from @category.Name</a>
        </div>
    </div>

}
